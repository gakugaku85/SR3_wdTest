{
    "name": "wdtest_16_64",
    "phase": "train", // train or val
    "gpu_ids": [
        0
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
        // "resume_state": "experiments/sr_ffhq_model_16_128/checkpoint/I640000_E37" //pretrain model or training state
    },
    "datasets": {
        "train": {
            "name": "testImg",
            "mode": "HR", // whether need LR img
            "dataroot": "/take/gaku/WDtest/images/sigma8",
            "datatype": "mhd", //lmdb or img, path of img files
            "l_resolution": 16, // low resolution need to super_resolution
            "r_resolution": 64, // high resolution
            "batch_size": 120,
            "num_workers": 8,
            "use_shuffle": false,
            "data_len": -1 // -1 represents all data used in train
        },
        "val1": {
            "name": "testImg",
            "mode": "HR",
            "dataroot": "/take/gaku/WDtest/images/sigma8_val1",
            "datatype": "mhd", //lmdb or img, path of img files
            "l_resolution": 16,
            "r_resolution": 64,
            "batch_size": 30,
            "data_len": -1 // data length in validation
        },
        "val2": {
            "name": "testImg",
            "mode": "HR",
            "dataroot": "/take/gaku/WDtest/images/sigma8_val2",
            "datatype": "mhd", //lmdb or img, path of img files
            "l_resolution": 16,
            "r_resolution": 64,
            "batch_size": 30,
            "data_len": -1 // data length in validation
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 2,
            "out_channel": 1,
            "inner_channel": 64,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 3,
            "dropout": 0.2
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 64,
            "channels": 1, //sample channel
            "loss_func": "l1", //wd or l1 or l2
            "loss_name": "original",  //wd or original
            "conditional": true, // unconditional generation or unconditional generation(super_resolution)
            "under_step_wd_loss": 2000,
            "pd_weight_thre": 0.01,
            "wdloss_weight": 10
        }
    },
    "train": {
        "n_iter": 1000000,
        "val_freq": 500,
        "save_checkpoint_freq": 500,
        "print_freq": 10,
        "optimizer": {
            "type": "adam",
            "lr": 1e-4
        }
    },
    "wandb": {
        "project": "WDtest"
    }
}